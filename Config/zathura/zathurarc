# TOKYO NIGHT THEME
# Base
set default-bg                  "#1a1b26"
set default-fg                  "#c0caf5"

# Status Bar
set statusbar-bg                "#1a1b26"
set statusbar-fg                "#c0caf5"

# Input Bar
set inputbar-bg                 "#1a1b26"
set inputbar-fg                 "#9ece6a"

# Notifications
set notification-bg             "#1a1b26"
set notification-fg             "#c0caf5"
set notification-error-bg       "#1a1b26"
set notification-error-fg       "#f7768e"
set notification-warning-bg     "#1a1b26"
set notification-warning-fg     "#e0af68"

# Selections & Highlights
set highlight-color             "rgba(122, 162, 247, 0.9)"
set highlight-active-color      "rgba(158, 206, 106, 0.5)"

# Completion
set completion-bg               "#1a1b26"
set completion-fg               "#c0caf5"
set completion-group-bg         "#1a1b26"
set completion-group-fg         "#7aa2f7"
set completion-highlight-bg     "#414868"
set completion-highlight-fg     "#c0caf5"

# RECOLOR MODE (The most important part)
# This forces the PDF background to be dark and text to be light
set recolor-lightcolor          "#1a1b26"
set recolor-darkcolor           "#c0caf5"

# Startup options
set recolor                     "true"
set recolor-keep-true-color     "true"

# Index Mode (Table of Contents)
set index-bg                    "#1a1b26"
set index-fg                    "#c0caf5"
set index-active-bg             "#7aa2f7"
set index-active-fg             "#1a1b26"
