{
	"Inline Math": {
		"prefix": "mk",
		"body": [
			"$${1}$"
		],
		"description": "Inline math"
	},

	"Display Math": {
		"prefix": "dm",
		"body": [
			"\\[",
			"    ${1}",
			"\\]"
		],
		"description": "Display math"
	},

	"Equation Environment": {
		"prefix": "equation",
		"body": [
			"\\begin{equation}",
			"    ${1}",
			"\\end{equation}"
		],
		"description": "Equation environment"
	},

	"Align Environment": {
		"prefix": "align",
		"body": [
			"\\begin{align}",
			"    ${1}",
			"\\end{align}"
		],
		"description": "Align environment"
	},

	"Subscript": {
		"prefix": "ss",
		"body": [
			"_{$1}"
		],
		"description": "Subscript"
	},

	"Power": {
		"prefix": "rr",
		"body": [
			"^{$1}"
		],
		"description": "Superscript"
	},

	"Parentheses Cite": {
		"prefix": "pcite",
		"body": [
			"\\parencite{${1}}"
		],
		"description": "Parentheses citation"
	},
	"Text Cite": {
		"prefix": "tcite",
		"body": [
			"\\textcite{${1}}"
		],
		"description": "Text citation"
	}
}